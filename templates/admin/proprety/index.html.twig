{% extends 'base.html.twig' %}
{% block title 'Gérer les bien' %}

{% block body  %}


  <div class="container mt-4">

    <h2>Gérer les Biens</h2>
      {% for message in app.flashes('success') %}

       <div class="alert alert-success">{{ message }}</div>
      {% endfor %}


            <table class="table table-striped">
                <thead>

                <tr>
                    <th>Titre</th>
                    <th>Action</th>
                </tr>
                </thead>

                <tbody>

                 {% for prprety in propreties %}
                   <tr>

                    
                       <td>{{ prprety.title }}</td>
                       <td><a href="{{ path('admin.proprety.edit',{id: prprety.id}) }}" class="btn btn-secondary">Editer</a>
                       <form method="post" action="{{ path('admin.proprety.delete', {id: prprety.id})  }}" style="display: inline-block"
                       onsubmit=" return confirm('Etes vous vraiment sur ? ')">
                           <input type="hidden" name="_method" value="DELETE">
                           <input type="hidden" name="_token" value="{{ csrf_token(prprety.id)  }}">
                           <button class="btn btn-danger">Supprimer</button>
                       </form>
                       </td>
                   </tr>
                 {% endfor %}

                </tbody>
            </table>
            <div class="text-right">
                <a href="{{  path('admin.proprety.news') }}" class="btn btn-primary"> Créer un nouveau</a>
            </div>



  </div>

{% endblock %}

